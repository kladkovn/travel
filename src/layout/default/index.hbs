{{! 
  Це леяут по замовчюванню, котрий вже містить базову структуру HTML документа
  І котрий обгортає код container файлів для будь-яких ендпоїнтів
}}

<!DOCTYPE html>
<html>

	<head>
		<title>
			{{title}}
		</title>
		<base href="../">
		<meta charset='utf-8'/>

		{{!-- Підключаємо файл, який нормалізує CSS --}}
		<link href='css/normalize.css' rel='stylesheet' />
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">

		{{!-- Підключаємо файл стилів layout --}}
		<link href='dist/css/layout/default/index.css' rel='stylesheet' />
		{{!-- Підключаємо файл скриптів layout --}}
		<script src="dist/js/layout/default/index.js"></script>

		{{!-- Підключаємо файл стилів container --}}
		<link href='dist/css/container/{{name}}/index.css' rel='stylesheet' />
		{{!-- Підключаємо файл скриптів container --}}
		<script src="dist/js/container/{{name}}/index.js"></script>

		{{#each component}}
			{{!-- Підключаємо файл стилів component --}}
			<link href='dist/css/component/{{this}}/index.css' rel='stylesheet' />
			{{!-- Підключаємо файл скриптів component --}}
			<script src="dist/js/component/{{this}}/index.js"></script>
		{{/each}}
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
	</head>

	<body>
		{{>header}}
		{{!  ↓  ця конструкція показує куди шаблонізатору треба вставляти код з container файлу   }}
		{{{body}}}

		{{> footer}}
	</body>

</html>
